{
  "expo": {
    "name": "taskmelt",
    "slug": "taskmelt",
    "version": "2.8.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "taskmelt",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "app.rork.taskmelt",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "taskmelt uses your microphone to capture voice input for the brain dump feature. For example, you can speak your thoughts and tasks aloud, and the app will transcribe them into organized, actionable items.",
        "NSCalendarsUsageDescription": "Allow $(PRODUCT_NAME) to access your calendar",
        "NSRemindersUsageDescription": "Allow $(PRODUCT_NAME) to access your reminders"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "extra": {
      "privacyPolicyUrl": "https://rork.com/privacy",
      "termsOfServiceUrl": "https://rork.com/terms",
      "router": {
        "origin": "https://rork.com/"
      },
      "eas": {
        "projectId": "c50401b3-142e-4f46-86da-c27182941d65"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "app.rork.taskmelt",
      "permissions": [
        "android.permission.VIBRATE",
        "RECORD_AUDIO",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ],
      "privacyPolicy": "https://rork.com/privacy"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://rork.com/"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-av",
        {
          "microphonePermission": "taskmelt uses your microphone to capture voice input for the brain dump feature. For example, you can speak your thoughts and tasks aloud, and the app will transcribe them into organized, actionable items."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#ffffff",
          "defaultChannel": "default",
          "enableBackgroundRemoteNotifications": false,
          "sounds": []
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "The app needs to access your calendar."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "owner": "arthi1805"
  }
}
